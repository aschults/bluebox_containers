{
   "kind":"PersistentVolume",
   "apiVersion":"v1",
   "metadata":{
      "name":"ampache-mysql-config",
      "labels":{
         "app":"ampache",
         "pkg":"ampache"
      }
   },
   "spec":{
      "capacity":{
         "storage":"50Mi"
      },
      "accessModes":["ReadWriteMany"],
      "hostPath":{
         "path":"/etc/k8s/ampache-mysql-config"
      }
   }
}
{
   "kind":"PersistentVolumeClaim",
   "apiVersion":"v1",
   "metadata":{
      "name":"ampache-mysql-config-claim",
      "labels":{
         "pkg":"ampache"
      }
   },
   "spec": {
      "resources":{
         "requests": {
            "storage":"50Mi"
         }
      },
      "accessModes":["ReadWriteMany"],
      "volumeName":"ampache-mysql-config"
   }
}
