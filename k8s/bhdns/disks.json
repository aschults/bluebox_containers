{
   "kind":"PersistentVolume",
   "apiVersion":"v1",
   "metadata":{
      "name":"bhdns-data",
      "labels":{
         "app":"bhdns",
         "pkg":"bhdns"
      }
   },
   "spec":{
      "capacity":{
         "storage":"50Mi"
      },
      "accessModes":["ReadWriteMany"],
      "hostPath":{
         "path":"/etc/k8s/bhdns-data"
      }
   }
}
{
   "kind":"PersistentVolumeClaim",
   "apiVersion":"v1",
   "metadata":{
      "name":"bhdns-data-claim",
      "labels":{
         "pkg":"bhdns"
      }
   },
   "spec": {
      "resources":{
         "requests": {
            "storage":"50Mi"
         }
      },
      "accessModes":["ReadWriteMany"],
      "volumeName":"bhdns-data"
   }
}
