{
   "kind":"PersistentVolume",
   "apiVersion":"v1",
   "metadata":{
      "name":"mosquitto-data-disk",
      "labels":{
         "app":"mqtt",
         "pkg":"mosquitto"
      }
   },
   "spec":{
      "capacity":{
         "storage":"500Mi"
      },
      "accessModes":["ReadWriteMany"],
      "hostPath":{
         "path":"/var/spool/mosquitto-data"
      }
   }
}
{
   "kind":"PersistentVolumeClaim",
   "apiVersion":"v1",
   "metadata":{
      "name":"mosquitto-data-disk-claim",
      "labels":{
         "pkg":"mosquitto"
      }
   },
   "spec": {
      "resources":{
         "requests": {
            "storage":"500Mi"
         }
      },
      "accessModes":["ReadWriteMany"],
      "volumeName":"mosquitto-data-disk"
   }
}
