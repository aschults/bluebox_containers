{
   "kind":"PersistentVolume",
   "apiVersion":"v1",
   "metadata":{
      "name":"squid-cache-disk",
      "labels":{
         "app":"web-proxy",
         "pkg":"squid"
      }
   },
   "spec":{
      "capacity":{
         "storage":"500Mi"
      },
      "accessModes":["ReadWriteMany"],
      "hostPath":{
         "path":"/var/tmp/squiddisk-cache"
      }
   }
}
{
   "kind":"PersistentVolumeClaim",
   "apiVersion":"v1",
   "metadata":{
      "name":"squid-disk-claim-cache",
      "labels":{
         "pkg":"squid"
      }
   },
   "spec": {
      "resources":{
         "requests": {
            "storage":"500Mi"
         }
      },
      "accessModes":["ReadWriteMany"],
      "volumeName":"squid-cache-disk"
   }
}
