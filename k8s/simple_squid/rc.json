{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"simple-squid",
      "labels":{
         "app":"web-proxy",
         "pkg":"squid"
      }
   },
   "spec":{
      "replicas":2,
      "selector":{
         "app":"web-proxy",
         "pkg":"squid"
      },
      "template":{
         "metadata":{
            "labels":{
               "app":"web-proxy",
               "pkg":"squid"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"squid",
                  "image":"aschults/bluebox_squid:base_latest",
                  "imagePullPolicy":"Always",
                  "env":[
                     {
                         "name":"append_domain",
                         "value":"schultschik.local."
                     },
                     {
                         "name":"dns_svc",
                         "value":"BHDNS"
                     },
                     {
                         "name":"disk_cache_size",
                         "value":"500"
                     },
                     {
                         "name":"sslbump",
                         "value":"1"
                     }
                  ],
                  "ports":[
                     {
                        "name":"proxy",
                        "containerPort":3128
                     }
                  ],
                  "volumeMounts": [
                     {
                        "mountPath":"/var/spool/squid/cache",
                        "name":"sqdisk-cache"
                     },
                     {
                        "mountPath":"/var/spool/squid/ssl",
                        "name":"sqdisk-ssl"
                     }
                  ],
                  "livenessProbe": {
                     "exec": {
                        "command": [
                           "/bin/sh",	
                           "/liveness_check.sh"
                        ]
                     },
                     "initialDelaySeconds": 30,
                     "timeoutSeconds": 1
                  } 
               }
            ],
            "volumes":[
               {
                 "name":"sqdisk-cache",
                 "persistentVolumeClaim": {
                    "claimName":"squid-disk-claim-cache"
                 }
               },
               {
                 "name":"sqdisk-ssl",
                 "persistentVolumeClaim": {
                    "claimName":"squid-disk-claim-ssl"
                 }
               }
            ]
         }
      }
   }
}
